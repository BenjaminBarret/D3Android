<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/unit_1"
        android:layout_marginLeft="@dimen/unit_2"
        android:layout_marginRight="@dimen/unit_2"
        android:layout_marginTop="@dimen/unit_1"
        app:cardElevation="@dimen/card_elevation"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/unit_1"
            android:paddingTop="@dimen/unit_1"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/unit_1"
                android:layout_weight="1"
                android:textColor="@color/black"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_right_chevron"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>


