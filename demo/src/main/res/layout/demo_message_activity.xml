<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.applidium.pierreferrand.d3library.D3View
        android:id="@+id/d3view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/unit_1"
        android:layout_marginLeft="@dimen/unit_2"
        android:layout_marginRight="@dimen/unit_2"
        android:layout_marginTop="@dimen/unit_1"
        android:background="@color/eastern_blue"
        android:gravity="center"
        android:text="@string/object_arcs_activity_message"
        android:textColor="@color/white"
        android:textSize="@dimen/text_unit_4"
        />
</LinearLayout>
